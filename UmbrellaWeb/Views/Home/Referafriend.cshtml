
@{
    ViewBag.Title = "Referafriend";
}

<div class="panel panel-default mb-3">
    <div class="panel-heading">Refer A Friend</div>
    <div class="panel-body">
        <div class="form-group row">
            <label for="txtname" class="col-md-2 col-md-form-label">Name</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Name" id="txtname">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtEmail" class="col-md-2 col-md-form-label">Email</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Email" id="txtEmail">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtNumber" class="col-md-2 form-label">Number</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Number" id="txtNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtAgency" class="col-md-2 col-md-form-label">Agency</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Agency" id="txtAgency">
            </div>
        </div>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">Referred by</div>
    <div class="panel-body">
        <div class="form-group row">
            <label for="rtxtname" class="col-md-2 col-md-form-label">Name</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Name" id="rtxtname">
            </div>
        </div>
        <div class="form-group row">
            <label for="rtxtEmail" class="col-md-2 col-md-form-label">Email</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Email" id="rtxtEmail">
            </div>
        </div>
        <div class="form-group row">
            <label for="rtxtNumber" class="col-md-2 form-label">Number</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Number" id="rtxtNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="rtxtAgency" class="col-md-2 col-md-form-label">Agency</label>
            <div class="col-md-10">
                <input class="form-control" type="text" placeholder="Agency" id="rtxtAgency">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <input id="btnSubmit" class="btn btn-primary" type="submit" value="submit" />
                <input id="Reset1"  class="btn btn-info"  type="reset" value="reset" />
            </div>
        </div>
    </div>
</div>
